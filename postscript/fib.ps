%%Title: 1st 100 Fibonacci Numbers generated in PostScript only
%%DocumentMedia: A4
%%Orientation: portrait
%%DocumentData: Clean7Bit
%%BoundingBox: 0 0 595 842
%%Pages: 1

/mm {2.835 mul} def
/x0 10 mm def
/y0 253 mm def

/Times-Roman findfont 22 scalefont setfont
newpath
x0 y0 10 mm add moveto
(1st 100 Fibonacci Numbers) show

/Helvetica findfont 10 scalefont setfont

/x 10 mm def
/y y0 def
/xstep 50 mm def
/ystep 12 def

1 1 0 % start values for Fibonacci calculation
100 {
    newpath
    x 3 add y moveto
    dup 20 string cvs show
    add dup 3 1 roll   % Fibonacci calculation
    /y y ystep sub def
    y 20 mm lt {
        /x x xstep add def
        /y y0 def
    } if
} repeat
pop pop pop

showpage

